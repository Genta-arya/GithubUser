<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.FragmentFollower">


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/list_rv_follower"
        android:layout_width="412dp"
        android:layout_height="384dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </androidx.recyclerview.widget.RecyclerView>

    <ProgressBar
        android:id="@+id/progressBarr"
        style="?android:attr/progressBarStyle"
        android:layout_width="139dp"
        android:layout_height="107dp"
        android:layout_marginTop="-200dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/list_rv_follower"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/list_rv_follower"
        app:layout_constraintTop_toTopOf="@+id/list_rv_follower">


    </ProgressBar>


</androidx.constraintlayout.widget.ConstraintLayout>